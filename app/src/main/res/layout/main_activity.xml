<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tawk.carl.myapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/roundbuttonstyle"
                android:text="@string/second_page_first_button"
                android:id="@+id/my_profile"/>

            <Button
                style="@style/roundbuttonstyle"
                android:text="@string/second_page_second_button"
                android:id="@+id/information_page"/>

            <Button
                style="@style/roundbuttonstyle"
                android:text="@string/second_page_third_button"
                android:id="@+id/mood_quiz"
                android:visibility="gone"/>

            <Button
                style="@style/roundbuttonstyle"
                android:text="@string/fourth_button"
                android:visibility="gone"/>

            <Button
                style="@style/roundbuttonstyle"
                android:text="Fifth Button"
                android:visibility="gone"/>

            <Button
                style="@style/roundbuttonstyle"
                android:text="Last Button"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

